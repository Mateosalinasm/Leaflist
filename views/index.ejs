<%- include('../partials/header.ejs') %>


<h1 class="title">Today's</h1>
<h2 class="sub-title">Tasks</h2>
<div class="parent-container">
    <div class="task-container pl-10 pr-5">
        <% for( let i = 0; i < tasks.length; i++ ) { %>
            <li class="text-left py-1">
                <a class="font-semibold text-3xl"  href="/tasks/<%=tasks[i].id%>">
                    <%=tasks[i].name%>
                </a> |
                <a href="/tasks/<%=tasks[i].id%>/edit">Edit</a> |
                <form class="inline" action="/tasks/<%=tasks[i].id%>?_method=DELETE" method="POST">
                    <input type="submit" value="Delete">
                </form>
                <p class="py-1"><%=tasks[i].time%></p>
                <p class="py-1"><%=tasks[i].note%></p>
            </li> 
            <div class="divide"></div>
            <% } %>
        </div>
</div>
<div class="create-container">
    <div class="create-btn flex justify-center">
        <a class="create p-2" href="/tasks/new">Add Task</a>
    </div>
</div>


<%- include('../partials/footer.ejs') %>